<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="buttonText"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{buttonText}" />
    </LinearLayout>
</layout>
